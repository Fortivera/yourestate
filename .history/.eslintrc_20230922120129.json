{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "extends": [
      "next",
      "prettier"
    ],
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "semi": [
          "off",
          "never"
        ]
        // Other TypeScript-specific ESLint rules
      }
    }
  ],
  "rules": {
    "semi": [
      "off",
      "never"
    ]
  }
}